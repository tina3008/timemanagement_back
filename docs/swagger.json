                    "type": "string",
                    "example": 380000000002
                  },
                  "email": {
                    "definitions": "contact's phone number",
                    "type": "string",
                    "example": "qwee3@example.com"
                  },
                  "isFavourite": {
                    "definitions": "Would you like or not?",
                    "type": "boolean",
                    "example": false
                  },
                  "contactType": {
                    "definitions": "Contact's work place",
                    "type": "string",
                    "example": "work",
                    "enum": [
                      "work",
                      "home",
                      "personal"
                    ],
                    "default": "personal"
                  },
                  "photo": {
                    "description": "Contact's photo to download",
                    "type": "string",
                    "format": "binary",
                    "example": "https://res.cloudinary.com/dzcis7rfr/image/upload/v1723708555/yikknimmâ€¦"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Change a contact",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
